{% extends 'base.html.twig' %}

{% block body %}
    <div class="text-center  blackground mb-3">
        <h1>Modification {{ artStyle.name }}</h1>
    </div>
    <div class="text-right">
        {{ form_start(delete_form) }}
        <input class=" btn btn-red" type="submit" value="Supprimer">
        {{ form_end(delete_form) }}
    </div>

    <div class="blackground">
        {{ form_start(edit_form) }}
        {{ form_widget(edit_form) }}
        <div class="text-center">
            <input class="btn btn-orange" type="submit" value="Modifier" />
            <a class="btn btn-green" href="{{ path('artstyle_index') }}">Retour</a>
        </div>
        {{ form_end(edit_form) }}
    </div>

{% endblock %}
