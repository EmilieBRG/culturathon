{% extends 'base.html.twig' %}

{% block body %}
    <h1>Artist</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ artist.id }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ artist.firstname }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ artist.lastname }}</td>
            </tr>
            <tr>
                <th>Dateofbirth</th>
                <td>{% if artist.dateOfBirth %}{{ artist.dateOfBirth|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Dateofdeath</th>
                <td>{% if artist.dateOfDeath %}{{ artist.dateOfDeath|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ artist.description }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('artist_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('artist_edit', { 'id': artist.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
