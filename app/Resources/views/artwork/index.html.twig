{% extends 'base.html.twig' %}
{% block body %}
    <div class="text-center">
        <h1>Oeuvres</h1><a class="btn btn-violet text-right" href="{{ path('artwork_new') }}">Nouvelle Oeuvre</a>
    </div>
    <div class="row no-gutters">
        {% for artwork in artworks %}
        <div class="col-xs-8 col-sm-4 col-md-3">
            <div class="card" >
                <a href="{{ path('artwork_show', { 'id': artwork.id }) }}" class="link-list">
                    <div class="image-wrapper">
                        <img class="card-img-top" src="{{ artwork.picture }}" alt="{{ artwork.name }}">
                    </div>
                </a>
                <div class="card-body text-center">
                    <h5 class="card-title">{{ artwork.name }}</h5>
                    <a class="btn btn-orange" href="{{ path('artwork_edit', { 'id': artwork.id }) }}">Modifier</a>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>



{% endblock %}
